$border = 1px solid rgba(51,51,48,0.14)
$shadow = 0px 0px 5px 2px rgba(0,0,0,0.11)
$font-stack = 'ChalkboardSE-Regular', sans-serif

.main_test_list
  margin 0px 100.5px 20px 100.5px
  -webkit-box-shadow $shadow
  -moz-box-shadow $shadow
  box-shadow $shadow
  display flex

.category_region
  width 25%
  float left
  height 600px
  border-right 1px solid rgba(51,51,48,0.14)

.main_list_region
  width 50%
  height 600px
  float left
  border-right 1px solid rgba(51,51,48,0.14)

.activity_region
  float left
  width 25%
  height 600px

.name_of_category,
.name_of_activity
  padding 10px 0px
  border-bottom 1px solid #DBDBDB
  background-color white

.inner
  font-family 'ChalkboardSE-Regular', sans-serif
  padding 5px 10px 5px
  text-align left
  cursor pointer
  &:hover
    background-color rgba(51, 51, 51, 0.3)

.category_region
  -webkit-box-shadow inset 0px 0px 37px 0px rgba(0, 0, 0, 0.11)
  -moz-box-shadow inset 0px 0px 37px 0px rgba(0, 0, 0, 0.11)
  box-shadow inset 0px 0px 37px 0px rgba(0, 0, 0, 0.11)

.glyphicon.glyphicon-chevron-down
  float right
  color #DBDBDB
  transition-delay 1s
  transition all 200ms linear
  &:hover
    color #F7F7F9
    transition-delay 1s
    transition all 200ms linear