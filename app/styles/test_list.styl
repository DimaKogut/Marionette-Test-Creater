$border = 1px solid rgba(51,51,48,0.14)
$shadow = 0px 0px 5px 2px rgba(0,0,0,0.11)


.main_test_list
  margin 0px 100.5px 20px 100.5px
  -webkit-box-shadow $shadow
  -moz-box-shadow $shadow
  box-shadow $shadow
  display flex

.category_region
  width 25%
  float left
  min-height 600px
  border-right 1px solid rgba(51,51,48,0.14)

.main_list_region
  width 50%
  float left
  border-right 1px solid rgba(51,51,48,0.14)

.activity_region
  float left
  width 25%

.name_of_category,
.name_of_activity
  padding 10px 0px
  border-bottom 1px solid #DBDBDB
  background-color white

.inner
  font-family 'ChalkboardSE-Regular', sans-serif
  text-align left
  cursor pointer

.category_region
  -webkit-box-shadow inset 0px 0px 37px 0px rgba(0, 0, 0, 0.11)
  -moz-box-shadow inset 0px 0px 37px 0px rgba(0, 0, 0, 0.11)
  box-shadow inset 0px 0px 37px 0px rgba(0, 0, 0, 0.11)

.glyphicon.glyphicon-chevron-down,
.glyphicon.glyphicon-chevron-up
  float right
  color #DBDBDB
  transition-delay 1s
  transition all 200ms linear
  &:hover
    color #F7F7F9
    transition-delay 1s
    transition all 200ms linear

.cat_name_title
  font-weight bold
  padding 5px 10px 5px
  &:hover
    background-color rgba(51, 51, 51, 0.3)

.subcat_area
  background-color white
  display none

.sub_category_item_left
  height 29px
  padding 5px 10px
  border-bottom 1px solid #F7F7F9
  font-size 13px
  transition-delay 1s
  transition all 200ms linear
  .number_of_test_show
    padding-top 1px
    padding-left 0px
    float left
    font-family $font-title
    color white
    transition-delay 1s
    transition all 200ms linear
  &:hover
    .number_of_test_show
      padding-left 7px
      font-weight bold
      transition-delay 1s
      transition all 200ms linear
      color rgba(54,195,73, 0.8)

.add_number_of_test
  color rgba(54,195,73, 0.8)
  .number_of_test_show
    padding-left 7px
    font-weight bold
    transition-delay 1s
    transition all 200ms linear
    color rgba(54,195,73, 0.8)

.subcategory_name_slide
  float left

.active_cat_button
  background-color rgba(51, 51, 51, 0.3)

.all_test
  float left

.all_test_item
  border-bottom 1px solid #DBDBDB
  display inline-block
  width 100%
  float left
  cursor pointer
  &:hover
    background-color rgba(51, 51, 51, 0.3)

.main_test
  margin-top 19px

.table_title_test
  font-family $font-stack
  height 35px

span.tables_test
    float left
    width 33%
    padding 5px

.middle_content
  font-family $font-stack
  font-size 13px
  max-height 543px
  overflow scroll

.tables_test.cat
  float right

.all_test.inner_subcategory_name
  float right
  text-align left
  width 30%
  padding 4px 4px 4px 2px

.glyphicon.test
  font-size 13px

#search.test_search
  font-size 15px

.all_test.inner_test_name
  width 70%
  text-align left
  padding 4px 0px 4px 22px

.empty_current_list
  padding 25%

.main_test_top
  display none

.main_test_top
  font-family $font-stack
  padding 20px

.test_description
  padding-top 10px
  text-align left

.test_name_choose
  border-bottom 1px solid #DCDCDD
  padding-bottom 15px

.start_this_test
  width 100px
  height 30px
  margin 30px 110px 30px 110px
  line-height 26px
  cursor pointer
  background-color rgba(117,255,136,0.52)
  box-shadow 0px 5px 10px 2px rgba(0,0,0,0.11)
  text-align center

.end_line
  margin-bottom 0px

.activity_single_item
  font-family $font-stack
  border-bottom 1px solid #DBDBDB
  margin 5px 10px 5px
  text-align left
  float left

  font-size 13px

.test_activity_result:after
  content '%'

.activity_text
  color #A9A9AE
  padding-right 7px

.test_activity_result
  padding-left 7px

.test_activity_name
  transition-delay 1s
  transition all 200ms linear
  cursor pointer
  margin-bottom 8px
  &:hover
    color rgba(54,195,73,0.6)
    transition-delay 1s
    transition all 200ms linear
    border-bottom 1px solid rgba(54,195,73,0.6)

.tooltip
  &.top
    .tooltip-inner
      background-color rgba(54,195,73,0.6)
      color #333
    .tooltip-arrow
      border-top-color rgba(54,195,73,0.6)

.load_more_activity
  display none
  float right
  font-family $font-stack
  font-size 13px
  color #A9A9AE
  cursor pointer
  margin 0px 10px 10px
  &:hover
    color #333

.activity_single_item:last-child
  margin-bottom 15px

.containar_test_list
  display flex

.glyphicon.glyphicon-list-alt
  float right
